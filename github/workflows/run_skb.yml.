name: SKB 24/7 Monitor

on:
  schedule:
    - cron: '*/15 * * * *' # هر ۱۵ دقیقه یکبار خودکار اجرا شود
  workflow_dispatch: # اجازه اجرای دستی هم بدهد

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2
      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: '3.9'
      - name: Install dependencies
        run: pip install requests gspread oauth2client
      - name: Run Monitor
        run: python skb-monitor.py
